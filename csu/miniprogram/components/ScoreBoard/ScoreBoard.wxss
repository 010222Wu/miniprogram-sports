/* components/ScoreBoard/ScoreBoard.wxss */
.container {
  width: 750rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.score {
  width: 45%;
  font-size: 34rpx;
  color: #585858;
  display: flex;
  justify-content: center;
  align-items: baseline;
  white-space: nowrap;
}

.score text {
  font-size: 120rpx;
  white-space: nowrap;
  font-weight: bolder;
  background-image: linear-gradient(to right, #9bb5eb, #f2fbb6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  -webkit-text-stroke: 1px rgba(155, 180, 235, 0.9);
  text-shadow: 0 5px rgba(140, 159, 199, 0.29);
  font-family: Tahoma;
}

.div {
  width: 1px;
  height: 60%;
  background-color: #9bb7ea;
}

.log {
  width: 45%;
  min-height: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logitem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.logitem text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}